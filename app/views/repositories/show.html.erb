<h1>Issue詳細</h1>

<div class="container">

  <div class="row">
    <div class="col-md-12 col-sm-6">
      <div class-"repository_name">
        <h3><%= @repository.repository_name %></h3>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>title</th>
            <th>body</th>
            <th>html_url</th>
            <th>github_created_at</th>
          </tr>
        </thead>
        <tbody>
          <% @repository.issues.each do |issue| %>
            <tr>
              <td><%= issue.title %></td>
              <td><%= issue.body %></td>
              <td><%= issue.html_url %></td>
              <td><%= issue.github_created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
